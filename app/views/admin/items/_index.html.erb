<table class="table mt-3 mb-5">
  <thead style="background-color:#f5fffa">
    <tr>
      <th>商品ID</th>
      <th></th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= image_tag item.get_image(50, 50) %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price_without_tax.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_stopped == false %>
        <td class="text-success">販売中</td>
      <% else %>
        <td class="text-black-50">販売停止中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="mb-3">
  <%= paginate @items %>
</div>