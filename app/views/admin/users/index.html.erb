<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="row-md-10 pb-3">
        <div class="d-flex">
          <h2 class="mr-auto">社員一覧</h2>
          <%= link_to(new_user_registration_path, method: :get) do %>
            <i class="fa-solid fa-circle-plus plus"></i>
          <% end %>
        </div>
        <table class="table mt-3 mb-5">
          <thead class="thead-light">
            <tr>
              <th>
                ログインID
              </th>
              <th>
                氏名
              </th>
              <th>
                電話番号
              </th>
              <th>
                ステータス
              </th>
              <th>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th>
                <%= user.login_id %>
              </th>
              <th>
                <%= link_to admin_user_path(user.id), method: :get do %>
                  <%= user.full_name %>
                <% end %>
              </th>
              <th>
                <%= user.telephone_number %>
              </th>
              <th>
                <% if user.is_deleted == false %>
                  有効
                <% else %>
                  無効
                <% end %>
              </th>
              <th>
                <%= link_to rooms_path(user),class: 'btn btn-success' do %>
                  <i class="fas fa-envelope"></i>DM
                <%end%>
              </th>  
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>