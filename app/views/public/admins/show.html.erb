<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2><%= @admin.full_name %>さんの社員情報詳細</h2>
      <div class="row-md-10 pb-3">
        <table class="table mt-5">
          <tr>
            <th style="width: 30%">
              社員ID
            </th>
            <th>
              <%= @admin.login_id %>
            </th>
          </tr>
          <tr>
            <th>
              氏名
            </th>
            <th>
              <%= @admin.full_name %>
            </th>
          </tr>
          <tr>
            <th>
              フリガナ
            </th>
            <th>
              <%= @admin.full_name_kana %>
            </th>
          </tr>
          <tr>
            <th>
              電話番号
            </th>
            <th>
              <%= @admin.telephone_number %>
            </th>
          </tr>
        </table>
        <div class="mt-5 mb-5 text-center">
          <%= link_to "事務員一覧に戻る", admins_path, class: "btn btn-primary mr-5" %>
        </div>
      </div>
    </div>
  </div>
</div>