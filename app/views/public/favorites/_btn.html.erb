<% if item.favorited_by?(current_user) %>
  <%= link_to item_favorites_path(item), method: :delete, remote: true do %>
    <button type="button" class="btn btn-outline-warning">お気に入りを解除する<i class="fa-solid fa-star", aria-hidden="true", style="color: #ffd700;"></i></button>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, remote: true do %>
    <button type="button" class="btn btn-outline-warning">お気に入り登録する<i class="fa-regular fa-star", aria-hidden="true"></i></button>
  <% end %>
<% end %>