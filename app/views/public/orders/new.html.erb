<div class='container py-5'>
  <div class='row'>
    <div class='col-md-10 mx-auto'>
      <h2>注文情報入力</h2>
      <div class="row-md-10">
          <%= form_with model: @order, url: orders_confirm_path, local: true, method: :post do |f| %>
          <div class="d-flex flex-wrap">
            <div class="form-group col-md-5">
              <%= f.label :payment_method, "支払方法", class: "font-weight-bold mt-5" %>
              <div>
                <%= f.radio_button :payment_method, "cash" %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:cash] %>
              </div>
              <div>
                <%= f.radio_button :payment_method, "credit_card" %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card]%>
              </div>
              <div>
                <%= f.radio_button :payment_method, "bank_transfer" %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:bank_transfer]%>
              </div>
              <div>
                <%= f.radio_button :payment_method, "electronic_money" %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:electronic_money]%>
              </div>
            </div>
            <div class="form-group col-md-5">
              <div class="row mt-5">
                <%= f.label :delivery, "納品先", class: "font-weight-bold" %>
                <%= f.text_field :delivery, class: "form-control" %>
              </div>
              <div class="row mt-5">
                <%= f.label :deadline, "納期", class: "font-weight-bold" %>
                <%= f.date_field :deadline, value: Time.now.strftime("%Y-%m-%d"), class: "form-control" %>
              </div>
              <div class="row mt-5">
                <%= f.label :note, "備考", class: "font-weight-bold" %>
                <%= f.text_area :note, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="text-center mt-5 mb-5">
            <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
