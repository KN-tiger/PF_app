<div class="container py-5">
  <div class="row pb-3">
    <h2>新規社員登録</h2>
  </div>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true %>
          </td>
          <td>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana %>
          </td>
          <td>
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
          <td colspan="2">
            <%= f.text_field :telephone_number %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :login_id, "ログインID" %></td>
          <td colspan="2">
            <%= f.text_field :login_id, autocomplete: "login_id" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード（6文字以上)" %></td>
          <td colspan="2">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success mt-5" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
